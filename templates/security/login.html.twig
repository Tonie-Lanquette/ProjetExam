{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="flex flex-col justify-center items-center h-screen w-full">
    <div class="flex flex-col bg-white dark:bg-[#494A56] w-1/2 rounded-lg py-10 px-32">
        <form method="post" class="flex flex-col">
          

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Log out</a>
                </div>
            {% endif %}

            <h1 class="text-4xl font-bold text-center mb-10">Please sign in</h1>

        <div class="flex flex-col mb-12">
            <label for="username" class="font-bold">Email :</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control text-[#202020] mt-2 pl-2 rounded-md bg-gray-200 focus:ring-4 focus:ring-[#65C986]" autocomplete="email" required autofocus>
        </div>

        <div class="flex flex-col mb-12">  
            <label for="password" class="font-bold" >Password :</label>
            <input type="password" name="_password" id="password" class="form-control text-[#202020] mt-2 pl-2 rounded-md bg-gray-200 focus:ring-4 focus:ring-[#65C986]" autocomplete="current-password text-[#202020]" required>
        </div>
            

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            <a href="{{ path('app_register') }}" class="underline mt-[-30px] mb-10">Don't have an account yet ?</a>
{% if error %}
                <div class="text-red-950 px-2 py-1 bg-red-500/50 border-2 border-red-500 rounded-md w-fit mx-auto font-bold text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <button class="self-end bg-[#65C986] w-fit text-[#202020] font-bold py-2 px-4 rounded-md hover:bg-[#58b678]" type="submit">Log in
            </button>
        </form>
    </div>
</div>
{% endblock %}
