{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  <div class="flex flex-col justify-center items-center h-screen w-full">
    <div class="flex flex-col bg-white dark:bg-[#494A56] w-1/2 rounded-lg py-10 px-32">
    <h1 class="text-4xl font-bold text-center mb-10">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

<a href="{{ path('app_login') }}" class="underline mt-[-30px] mb-10">Already have an account ?</a>


        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
    </div>
    </div>
{% endblock %}
