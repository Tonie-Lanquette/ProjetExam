{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Introduction</th>
                <td>{{ article.introduction }}</td>
            </tr>
            <tr>
                <th>Starter_explication</th>
                <td>{{ article.starterExplication }}</td>
            </tr>
            <tr>
                <th>Core_explication</th>
                <td>{{ article.coreExplication }}</td>
            </tr>
            <tr>
                <th>Optional_explication</th>
                <td>{{ article.optionalExplication }}</td>
            </tr>
            <tr>
                <th>Conclusion</th>
