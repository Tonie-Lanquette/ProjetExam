{% extends 'base.html.twig' %}

{% block title %}Build{% endblock %}

{% block body %}
    <h1>Build</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ build.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ build.title }}</td>
            </tr>
            <tr>
                <th>Visibility</th>
                <td>{{ build.visibility ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ build.created ? build.created|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ build.updated ? build.updated|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_build_index') }}">back to list</a>

    <a href="{{ path('app_build_edit', {'id': build.id}) }}">edit</a>

    {{ include('build/_delete_form.html.twig') }}
{% endblock %}
