{% extends 'base.html.twig' %}

{% block title %}Champion{% endblock %}

{% block body %}
    <h1>Champion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ champion.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ champion.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ champion.description }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ champion.role }}</td>
            </tr>
            <tr>
                <th>Splash_art</th>
                <td><img src="{{ champion.splashArt }}" alt=""></td>
            </tr>
            <tr>
                <th>ChampionKey</th>
                <td>{{ champion.championKey }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_champion_index') }}">back to list</a>

    <a href="{{ path('app_champion_edit', {'id': champion.id}) }}">edit</a>

    {{ include('admin/champion/_delete_form.html.twig') }}
