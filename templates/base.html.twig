<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}

        <script src="https://cdn.tailwindcss.com"></script>

            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
        {% if is_granted('ROLE_ADMIN') and app.request.pathInfo matches('/admin/') %}
            <header class ="flex w-100 h-24 font-bold ">
                {% if app.request.attributes.get('_route') in ['app_article_index','app_article_new','app_article_show','app_article_edit']  %} 
                    <a class="flex bg-[#4A0026] border-b-8 border-white text-[#F1F1F1] w-full h-full items-center justify-around" href="{{ path('app_article_index') }}">Articles</a> 
                {% else %}
                    <a class="flex bg-[#4A0026] text-[#F1F1F1] hover:bg-[#E7C3C3] hover:text-black w-full h-full items-center justify-around" href="{{ path('app_article_index') }}">Articles</a>
                {% endif %} 
                {% if app.request.attributes.get('_route') in ['app_build_index','app_build_new','app_build_show','app_build_edit']  %}
                    <a class="flex bg-[#4A0026] border-b-8 border-white text-[#F1F1F1] w-full h-full items-center justify-around" href="{{ path('app_build_index') }}">Builds</a> 
                {% else %}
                    <a class="flex bg-[#4A0026] text-[#F1F1F1] hover:bg-[#E7C3C3] hover:text-black w-full h-full items-center justify-around" href="{{ path('app_build_index') }}">Builds</a> 
                {% endif %}
                {% if app.request.attributes.get('_route') in ['app_champion_index','app_champion_new','app_champion_show','app_champion_edit']  %} 
                    <a class="flex bg-[#4A0026] border-b-8 border-white text-[#F1F1F1]  w-full h-full items-center justify-around" href="{{ path('app_champion_index') }}">Champions</a> 
                {% else %}
                    <a class="flex bg-[#4A0026] text-[#F1F1F1] hover:bg-[#E7C3C3] hover:text-black w-full h-full items-center justify-around" href="{{ path('app_champion_index') }}">Champions</a>
                {% endif %} 
                {% if app.request.attributes.get('_route') in ['app_item_index','app_item_new','app_item_show','app_item_edit']  %}
                    <a class="flex bg-[#4A0026] border-b-8 border-white text-[#F1F1F1]  w-full h-full items-center justify-around" href="{{ path('app_item_index') }}">Items</a> 
                {% else %}
                    <a class="flex bg-[#4A0026] text-[#F1F1F1] hover:bg-[#E7C3C3] hover:text-black w-full h-full items-center justify-around" href="{{ path('app_item_index') }}">Items</a> 
                {% endif %}
                    <a class="flex  bg-[#4A0026] text-[#F1F1F1] hover:bg-[#E7C3C3] hover:text-black w-full h-full items-center justify-around" href="{{ path('app_logout') }}">Logout</a>
            </header>
        {% else %} 
        {# front header   #}
        {% endif %}
    <body class="bg-[#F1F1F1] dark:bg-[#3B3C44] dark:text-[#F1F1F1]">
        {% block body %}{% endblock %}
    </body>
</html>
