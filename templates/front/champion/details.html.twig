{% extends 'base.html.twig' %}

{% block title %}{{ champion.name }}{% endblock %}

{% block body %}
    <div class="w-full mb-96 relative ">
        <img src="{{ champion.splashArt }}" alt="{{ champion.description }}'s splash art" class="w-full z-0 bg-gradient-to-b">
        <div class="absolute inset-x-0 bottom-0 h-2/4 bg-gradient-to-b from-transparent dark:to-[#3B3C44] to-[#F1F1F1] z-10 flex items-center"> 
            <div class="flex flex-col items-center">
                <div class="flex w-5/6 items-end mb-10">
                    <p class="w-1/2 text-9xl">{{ champion.name }}</p> 
                    <p class="text-5xl mb-2">Categories : {{ champion.role }}</p>
                </div>
                <p class="w-5/6 text-2xl">{{ champion.description }}</p>
            </div>
        </div>
    </div>
   

    
{% endblock %}