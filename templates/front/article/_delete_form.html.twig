<form method="post" action="{{ path('app_article_front_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="bg-red-400 hover:bg-[#C5C5C5] text-[#202020] text-center font-bold py-2 px-3 rounded-md w-full">Delete</button>
</form>
