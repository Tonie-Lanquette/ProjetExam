{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="flex flex-col w-full items-center justify-center">
    <div class="w-full mb-32 md:mb-20 relative ">
        <img src="{{ article.build.champion.splashArt }}" alt="{{ article.build.champion.name}}'s splash art" class="w-full z-0">
        <div class="absolute inset-x-0 bottom-0 h-2/4 bg-gradient-to-b from-transparent dark:to-[#3B3C44] to-[#F1F1F1] to-70% z-10 flex items-center"> 
            <div class="flex flex-col items-center w-full mt-96 md:mt-20 lg:mt-1">
                <div class="flex flex-col lg:flex-row w-full lg:w-5/6 items-start lg:items-end mb-10 font-semibold">
                    <h1 class="w-full lg:w-1/2 text-center lg:text-start text-5xl lg:text-9xl">{{ article.build.champion.name }}</h1> 
                    <p class="w-full lg:w-1/2 text-center text-lg lg:text-3xl lg:text-right lg:pr-20 mb-2 mt-2">Categories : {{ article.build.champion.role }}</p>
                </div>
                <p class="w-full text-lg lg:w-5/6 lg:text-2xl text-center lg:text-start px-4 lg:px-0">{{ article.build.champion.description }}</p>
            </div>
        </div>
    </div>
    <div class="mt-80 md:mt-20 lg:mt-1 flex flex-col w-5/6 items-center justify-center space-y-16 mb-40 text-center text-justify text-[#202020] dark:text-[#F1F1F1]">
            <p class="text-7xl mb-20">{{ article.title }}</p>
            <div class=" text-xl">
                <p class="text-center lg:text-left text-2xl font-bold mb-4">Introduction :</p>
                <p class="indent-8">{{ article.introduction }}</p>
            </div>
            <div class=" text-xl">
                <p class="text-center lg:text-left text-2xl font-bold mb-4">Starter Items :</p>
                <p class="indent-8">{{ article.starterExplication }}</p>
            </div>
            <div class=" text-xl">
                <p class="text-center lg:text-left text-2xl font-bold mb-4">Core Items :</p>
                <p class="indent-8">{{ article.coreExplication }}</p>
            </div>
            <div class=" text-xl">
                <p class="text-center lg:text-left text-2xl font-bold mb-4">Optional Items :</p>
                <p class="indent-8">{{ article.optionalExplication }}</p>
            </div>
            <div class=" text-xl">
                <p class="text-center lg:text-left text-2xl font-bold mb-4">Conclusion :</p>
                <p class="indent-8">{{ article.conclusion }}</p>
            </div>
            
    </div>
    <div class="flex flex-col mb-40 space-y-10 items-center">
        <div class="space-x-10">
            <a href="{{ path('app_article_front_edit' , {'title': article.title}) }}" class="bg-orange-400 hover:bg-[#C5C5C5] text-[#202020] font-bold py-2 px-3 rounded-md w-full">
                Edit
            </a>
             {{ include('front/article/_delete_form.html.twig') }}
        </div>
        <div class="space-x-10">
            <a href="{{ path('app_build_front_details', {'title': article.build.title}) }}" 
                class="bg-[#65C986] hover:bg-[#C5C5C5] text-[#202020] font-bold py-2 px-3 rounded-md">
                    See the build
            </a>
            <a href="{{ path('app_create_article') }}" class="bg-[#65C986] hover:bg-[#C5C5C5] text-[#202020] font-bold py-2 px-3 rounded-md w-full">
                Write an article
            </a>
        </div> 
        <div class="space-x-10">
            <a href="{{ path('app_article_front_index') }}" class="bg-[#65C986] hover:bg-[#C5C5C5] text-[#202020] font-bold py-2 px-3 rounded-md w-full">
                    Back to articles
            </a>
        </div>  
    </div>  
</div>
    
{% endblock %}