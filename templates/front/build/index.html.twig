{% extends 'base.html.twig' %}

{% block title %}Hello BuildFrontController!{% endblock %}

{% block body %}
    <h1 class="text-6xl my-28">All builds</h1>

    <div class="flex flex-col w-full px-20 my-20 justify-center">
        {% for build in builds %}
            <div class="flex mx-16 my-16 text-center bg-[#494A56] rounded-md h-36">

                {# image #}
                <img src="{{ build.champion.squarePortrait }}" alt="{{ build.champion.name }}" class="self-left rounded-tl-md rounded-bl-md">

                {# title + object #}
                <div class="h-full flex flex-col justify-center w-full">
                    <div class="flex px-6 w-full">
                        <p class="capitalize">{{build.title}}</p>
                        <p>Creation : {{build.created|date("d/m/Y")}}</p>
                    </div>
                    
                    <div class="flex w-full">
                    {% for slot in build.slots %}              
                        {% for item in slot.item %}
                            <img src="{{ item.icon }}" alt="{{ item.name }}" class="mx-4 rounded-full">
                        {% endfor %}
                    {% endfor %}
                    </div>
                </div>

                {# like/dislike #}
                <div class="border-l-2 border-[#3B3C44] ml-auto h-full flex items-center justify-center px-4">
                    <p>like</p>
                </div>
            </div>        
        {% else %}
            <p>It seems that an error occurred while loading this page. Please excuse us for the inconvenience caused.</p>
        {% endfor %}
    </div>
{% endblock %}
