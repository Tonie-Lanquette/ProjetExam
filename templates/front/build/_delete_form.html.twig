<form method="post" action="{{ path('app_build_front_delete', {'title': build.title}) }}" onsubmit="return confirm('Are you sure you want to delete this build?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ build.id) }}">
    <button class="bg-red-400 hover:bg-[#C5C5C5] text-[#202020] font-bold py-2 px-3 rounded-md w-full">Delete</button>
</form>