{% extends 'base.html.twig' %}

{% block title %}Edit {{build.title}}{% endblock %}

{% block body %}

<div class="mt-20 space-x-10">   
    <a href="{{ path('app_profil_index') }}" class="bg-[#65C986] hover:bg-[#C5C5C5] text-[#202020] font-bold py-2 px-3 rounded-md w-full">Back to profile</a>
    <a href="{{ path('app_build_front_index') }}" class="bg-[#65C986] hover:bg-[#C5C5C5] text-[#202020] font-bold py-2 px-3 rounded-md w-full">Back to builds</a>
</div>
    <div class="bg-[#FFFFFF] dark:bg-[#494A56] w-3/6 my-40 py-40 rounded-md flex flex-col items-center justify-center text-[#202020] dark:text-[#F1F1F1]">
        <h1 class="text-6xl font-bold mb-20">Edit Build :</h1>
        <div class="w-4/6">
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.champion) }}
            
                {{ form_widget(form.slots) }}
                
                {{ form_row(form.visibility) }}
                <div class="flex justify-end mt-20">
                    <button class="bg-[#65C986] rounded-md py-2 px-4 font-bold text-[#202020]">{{ button_label|default('Publish') }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
   
{% endblock %}
